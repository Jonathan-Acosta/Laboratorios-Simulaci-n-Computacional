import math
def congruencial(a,b,m,x0,n):
    xn=0.0
    un=0.0
    list = []
    for j in range(0,n):
        xn=(a*x0 + b)%m
        un=xn/float(m)
        list.insert(j,un)
        x0=xn
    return list
